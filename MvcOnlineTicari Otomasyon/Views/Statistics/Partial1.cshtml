@model IEnumerable<MvcOnlineTicari_Otomasyon.Models.Classes.ClassGroup2>
<div class="card-header">
    <h3 class="card-title">Departman Personel Sayıları </h3>
</div>
<div class="card-body p-0">
    <table class="table table-sm">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Departman Adı</th>
                <th>Progress Bar</th>
                <th style="width: 40px">Sayı</th>
            </tr>
        </thead>
        <tbody>
            @{ int deskNumber = 0;}
            @foreach (var x in Model)
            {
                <tr>

                    <td>@{deskNumber++;} @deskNumber</td>
                    <td>@x.Department</td>
                    <td>
                        <div class="progress progress-xs">
                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-danger">@x.Number</span></td>


                </tr>
            }
        </tbody>
    </table>
</div>
